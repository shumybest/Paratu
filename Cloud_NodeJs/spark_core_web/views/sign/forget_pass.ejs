<div class="container">
    <div class="row">
        <div class="col-xs-12 col-sm-8 col-md-6 col-sm-offset-2 col-md-offset-3">
            <form method="post">
                <h2>找回密码:</h2>
                <%- message %>
                <hr class="colorgraph">
                <div class="form-group">
                        <% if (user != undefined) { %>
                        <input type="text" class="form-control input-lg" id="username" name="username" value="<%= user.name %>">
                        <% } else { %>
                        <input type="text" class="form-control input-lg" id="username" name="username" placeholder="用户名">
                        <% } %>
                </div>

                <div class="form-group">
                    <% if (typeof email !== 'undefined') { %>
                        <input type="email" class="form-control input-lg" id="email" name="email" value="<%= email %>"
                               style="color:#ff32d2">
                        <dd><span class="label label-warning">警告: 邮箱地址与用户名不匹配</span></dd>
                    <% } else { %>
                        <input type="email" class="form-control input-lg" id="email" name="email" placeholder="邮箱地址">
                    <% } %>
                </div>

                <div class="form-group">
                    <button type="submit" class="btn btn-primary btn-block btn-lg" id="btn_submit" name="btn_submit" disabled="true">下一步</button>
                </div>
                <div id="fgtpasshints"></div>
            </form>
        </div>
    </div>
</div>
