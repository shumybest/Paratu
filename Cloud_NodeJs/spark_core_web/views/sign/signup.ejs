<div class="container">
    <div class="row">
        <div class="col-xs-12 col-sm-8 col-md-6 col-sm-offset-2 col-md-offset-3">
            <form role="signup" method="post">
                <h2>注册</h2>
                <%- message%>
                <hr class="colorgraph">
                <div id="username_group" class="form-group">
                    <input type="text" name="username" id="username" class="form-control input-lg" placeholder="帐户名">
                </div>
                <div id="email_group" class="form-group">
                    <input type="email" name="email" id="email" class="form-control input-lg" placeholder="邮箱">
                </div>
                <div class="row">
                    <div class="col-xs-6 col-sm-6 col-md-6">
                        <div id="pass_group" class="form-group">
                            <input type="password" name="password" id="password" class="form-control input-lg" placeholder="密码">
                        </div>
                    </div>
                    <div class="col-xs-6 col-sm-6 col-md-6">
                        <div id="pass_group2" class="form-group">
                            <input type="password" name="password_confirmation" id="password_confirmation" class="form-control input-lg" placeholder="再次输入密码"
                                   validation="password">
                        </div>
                    </div>
                </div>
                <div class="row">
                    <div class="col-xs-6 col-md-6"><a href="/signin" class="btn btn-success btn-block btn-lg">我有帐号</a></div>
                    <div class="col-xs-6 col-md-6"><input type="submit" id="btn_submit" value="注册" class="btn btn-primary btn-block btn-lg" disabled="disabled"></div>
                </div>
                <div id="reghints"></div>
            </form>
        </div>
    </div>
</div>